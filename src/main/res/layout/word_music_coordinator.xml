<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/almost_white_background">
  <LinearLayout
    android:id="@+id/player_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_alignParentBottom="true"
    >
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:layout_weight="2">
      <com.eebolf.CantandoIngles.start.SynchButton
        android:id="@+id/synch_button"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:layout_weight="2">
      <com.eebolf.CantandoIngles.start.AudioFocusButton
        android:id="@+id/trans"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/dark_blue"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:layout_weight="2">
      <Button
        android:id="@+id/permanent"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/light_pink_lightning_bg"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:layout_weight="1">
      <com.eebolf.CantandoIngles.start.BeginningButton
        android:id="@+id/back_to_start_button"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:layout_weight="1">
      <com.eebolf.CantandoIngles.start.StopButton
        android:id="@+id/stop_button"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:layout_weight="1">
      <com.eebolf.CantandoIngles.start.PauseButton
        android:id="@+id/pause_start_button"
        android:layout_height="35dp"
        android:layout_width="60dp"
        android:textOn=""
        android:textOff=""/>
    </LinearLayout>
  </LinearLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/player_buttons"
    android:id="@+id/lyric_group_view"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">
  </FrameLayout>

</RelativeLayout>

