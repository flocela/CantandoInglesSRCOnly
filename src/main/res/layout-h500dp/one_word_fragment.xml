<?xml version="1.0" encoding="utf-8"?>
<com.eebolf.CantandoIngles.start.OneWordView xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="500dp"
                                             android:paddingLeft="5px"
                                             android:paddingRight="5px"
                                             android:paddingTop="25dp"
                                             android:paddingBottom="25dp"
                                             android:background="@drawable/almost_white_background"
                                             android:id="@+id/one_word_view"
                                             android:layout_gravity="center_vertical">
  <com.eebolf.CantandoIngles.start.VerticalProgressBar
    style="?android:attr/progressBarStyleHorizontal"
    android:id="@+id/progressBar"
    android:layout_width="7dp"
    android:layout_height="match_parent"
    android:progressDrawable="@drawable/touchable_progress_bar">
  </com.eebolf.CantandoIngles.start.VerticalProgressBar>
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30px"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true">
    <TextView
      android:id="@+id/english_word_past"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:gravity="center"
      android:background="@drawable/light_blue_rounded_2"
      android:minWidth="160px"
      android:layout_gravity="center"
      android:freezesText="true"
      />
    <TextView
      android:id="@+id/spanish_word_past"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:gravity="center"
      android:minWidth="160px"
      android:background="@drawable/dark_blue_rounded_2"
      android:layout_gravity="center"
      android:freezesText="true"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="15dp">
    <RelativeLayout
      android:layout_width="290dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
          android:id="@+id/english_word_corrected"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:gravity="center"
          android:minWidth="250px"
          android:background="@drawable/light_blue_border_rounded_5"
          android:layout_gravity="center"
          android:visibility="gone"
          android:freezesText="true"/>
        <TextView
          android:id="@+id/english_word"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:gravity="center"
          android:minWidth="250px"
          android:background="@drawable/light_blue_rounded_5"
          android:layout_gravity="center"
          android:freezesText="true"/>
      </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="290dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
          android:id="@+id/spanish_word"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:background="@drawable/dark_blue_rounded_5"
          android:gravity="center"
          android:minWidth="250px"
          android:layout_gravity="center"
          android:freezesText="true"/>
        <TextView
          android:id="@+id/spanish_word_meaning"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:background="@drawable/dark_blue_border_rounded_5"
          android:gravity="center"
          android:minWidth="250px"
          android:layout_gravity="center"
          android:visibility="gone"
          android:freezesText="true"/>
      </LinearLayout>
    </RelativeLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="30px">
    <TextView
      android:id="@+id/english_word_future"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:gravity="center"
      android:background="@drawable/light_blue_rounded_2"
      android:minWidth="160px"
      android:layout_gravity="center"
      android:freezesText="true"/>

    <TextView
      android:id="@+id/spanish_word_future"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:gravity="center"
      android:background="@drawable/dark_blue_rounded_2"
      android:minWidth="160px"
      android:layout_gravity="center"
      android:freezesText="true"/>
  </LinearLayout>

</com.eebolf.CantandoIngles.start.OneWordView>
